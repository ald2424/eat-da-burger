<h1>EAT-DA-BURGER!</h1>

<img class="centered"src="assets/images/burger.jpg" alt="burger" width="125px" height="150px"/>

<div class = "container">
  <div class = "row">
    <div class="col-md-6">

      <h2>Burgers yet to be devoured!</h2>

       <ul>
          {{#each burgers}}
            {{#unless devoured}}
               <li>
                {{burger_name}}
                <button class="change-devoure" data-id="{{id}}" data-newdevoure="{{this.devoured}}">Devoure it!</button>
              </li>
            {{/unless}}
          {{/each}}
        </ul>
    </div>  
    <div class="col-md-6">

        <h2>Burgers that have been devoured!</h2>

           <ul>
              {{#each burgers}}
                 {{#if devoured}}
                    <li>
                        {{burger_name}}
                    </li>
                {{/if}}
              {{/each}}
            </ul>
    </div>
 </div>
 <br><br><br>
  <div class = "col-md-12">
    <div  id="formCss">
      <h2>Add a Burger</h2>
      <form class="create-form outline">

        <div class="form-group">
         <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
          </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>
